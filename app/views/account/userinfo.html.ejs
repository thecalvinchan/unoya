<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Foundation</title>
    <link rel="stylesheet" href="/stylesheets/app.css" />
    <link rel="stylesheet" href="/stylesheets/account-userinfo.css" />
    <script src="/bower_components/modernizr/modernizr.js"></script>
</head>
<body>
    <nav id="navbar">
        <div class="row">
            <div class="small-12 columns">
                <nav class="top-bar" data-topbar>
                    <ul class="title-area">
                        <li class="name">
                            <h1><a href="/">unoya.</a></h1>
                        </li>
                    </ul>

                    <section class="top-bar-section">
                        <ul class="right">
                            <li class="avatar-thumb"><img src="/img/test-pic.jpg"></li>
                            <li class="has-dropdown">
                                <a href="#">username here</a>
                                <ul class="dropdown">
                                    <li><a href="#">My Profile</a></li>
                                    <li><a href="#">Edit Profile</a></li>
                                    <li><a href="#">Account Settings</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Log Out</a></li>
                                </ul>
                            </li>
                        </ul>
                    </section>

                </nav>
            </div>
        </div>
    </nav>

    <header id="post-nav-header">
        <div class="row">
            <div id="title" class="small-12 columns">
                <h2>Account Information. <small>Tell us a little more about yourself.</small></h2>
            </div>
        </div>
    </header>

    <section class="dashboard-main">
            <div class="row">
                    <div class="small-12 large-8 columns">
                    <form>
                        <div class="row">
                            <div class="small-12 medium-6 columns">
                                <label>First Name</label>
                                <input type="text">
                            </div>
                            <div class="small-12 medium-6 columns">
                                <label>Last Name</label>
                                <input type="text">
                            </div>
                            <div class="small-12 columns">
                                <label>Email Address</label>
                                <input type="email">
                            </div>
                            <div class="small-12 medium-6 columns">
                                <label>Username</label>
                                <input type="text">
                            </div>
                            <div class="small-12 medium-6 columns">
                                <label>Date of Birth</label>
                                <div class="row">
                                    <div class="small-4 columns">
                                        <select>
                                            <option>Month</option>
                                        </select>
                                    </div>
                                    <div class="small-4 columns">
                                        <select>
                                            <option>Date</option>
                                        </select>
                                    </div>
                                    <div class="small-4 columns">
                                        <select>
                                            <option>Year</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="small-12 medium-6 columns">
                                <button type="submit" class="button expand">Save Changes</button>
                            </div>
                            <hr>
                        </div>
                    </form>
                    <div class="row">
                        <div class="small-12 medium-6 columns">
                            <a class="button expand">Connect with Facebook</a>
                        </div>
                        <div class="small-12 medium-6 columns">
                            <a class="button expand">Connect with Twitter</a>
                        </div>
                        <hr>
                        <div class="small-12 medium-6 medium-centered columns">
                            <a class="button expand">Change Password</a>
                        </div>
                    </div>
                </div>
                <div class="small-12 large-4 columns"> 
                    <label>Avatar</label>
                    <img src="/img/test-pic.jpg">
                    <ul class="side-nav text-center">
                        <li><a href="#">Upload Picture...</a></li>
                        <li><a href="#">Use Facebook Profile Picture</a></li>
                        <li><a href="#">Use Twitter Profile Picture</a></li>
                    </ul>
                </div>
            </div>
    </section>

    <footer>
        <div class="row">
            <div class="large-12 columns">
                <ul class="inline-list right">
                    <li>Unoya &copy; 2013</li>
                </ul>
                <ul class="inline-list left">
                    <li>About</li>
                    <li>Start a Campaign</li>
                    <li>Privacy</li>
                    <li>Terms</li>
                </ul>
            </div>
        </div>
    </footer>

    <script src="/bower_components/jquery/jquery.js"></script>
    <script src="/bower_components/foundation/js/foundation.min.js"></script>
    <script src="/bower_components/foundation/js/foundation/foundation.magellan.js"></script>
    <script src="/bower_components/foundation/js/foundation/foundation.topbar.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/nav.js"></script>
</body>
</html>
